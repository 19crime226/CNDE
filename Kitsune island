-- ðŸ” Ember Farm Auto
local StatusLabel = Section:NewLabel("Ã‰tat : âŒ Inactif")
_G.AutoEmberFarm = false

function collectEmbers()
    local plr = game.Players.LocalPlayer
    local char = plr.Character or plr.CharacterAdded:Wait()
    local hrp = char:WaitForChild("HumanoidRootPart")

    for _, ember in pairs(game.Workspace:GetChildren()) do
        if ember:IsA("Model") and ember:FindFirstChild("TouchInterest") and ember.Name == "Ember" then
            hrp.CFrame = ember.CFrame + Vector3.new(0, 3, 0)
            wait(0.2)
        end
    end
end

Section:NewToggle("ðŸ” Ramassage Auto des Embers", "Active ou dÃ©sactive lâ€™auto farm", function(state)
    _G.AutoEmberFarm = state
    StatusLabel:UpdateLabel("Ã‰tat : " .. (state and "âœ… Actif" or "âŒ Inactif"))

    if state then
        spawn(function()
            while _G.AutoEmberFarm do
                pcall(collectEmbers)
                wait(0.5)
            end
        end)
    end
end)

