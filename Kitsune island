-- Interface CNDE-Style pour Kitsune Ember Collector

-- üì¶ UI Library (Kavo UI)
local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()
local Window = Library.CreateLib("ü¶ä Kitsune Ember Collector | SkyMan", "DarkTheme")

-- üåô Tab Kitsune Island
local Tab = Window:NewTab("Kitsune Island")
local Section = Tab:NewSection("Azure Ember")

-- √âtat du script
local isActive = false
local StatusLabel = Section:NewLabel("√âtat : ‚ùå Inactif")

-- Fonction pour collecter les Embers
function collectEmbers()
    local plr = game.Players.LocalPlayer
    local char = plr.Character or plr.CharacterAdded:Wait()
    local hrp = char:WaitForChild("HumanoidRootPart")

    for _, ember in pairs(game:GetService("Workspace"):GetChildren()) do
        if ember:IsA("Model") and ember:FindFirstChild("TouchInterest") and ember.Name == "Ember" then
            hrp.CFrame = ember.CFrame + Vector3.new(0, 3, 0)
            wait(0.2)
        end
    end
end

-- Toggle principal
Section:NewToggle("Activer le ramassage auto", "Ramasse les Azure Embers autour de toi", function(value)
    isActive = value
    _G.AutoEmberFarm = value
    StatusLabel:UpdateLabel("√âtat : " .. (value and "‚úÖ Actif" or "‚ùå Inactif"))

    if value then
        spawn(function()
            while _G.AutoEmberFarm do
                pcall(function()
                    collectEmbers()
                end)
                wait(0.5)
            end
        end)
    end
end)

-- ‚úÖ Notification au lancement
game.StarterGui:SetCore("SendNotification", {
    Title = "Kitsune Auto Ember",
    Text = "Interface lanc√©e avec succ√®s ü¶ä",
    Duration = 5
})
